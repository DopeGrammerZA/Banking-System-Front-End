# ==========================================
# Banking App Environment Configuration
# ==========================================
# Copy this file to .env and update values
# DO NOT commit .env to git!
# ==========================================

# ==========================================
# Application Settings
# ==========================================
ENVIRONMENT=development
APP_NAME=Banking App
APP_VERSION=1.0.0

# ==========================================
# Backend Settings
# ==========================================
BACKEND_PORT=80
BACKEND_HOST=0.0.0.0

# FastAPI settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ==========================================
# Frontend Settings
# ==========================================
FRONTEND_PORT=8080

# ==========================================
# Database Settings (MongoDB)
# ==========================================
MONGODB_URL=mongodb://mongo:27017/
MONGODB_DATABASE=bankingdb
MONGO_INITDB_DATABASE=bankingdb

# Optional: MongoDB authentication (for production)
# MONGO_INITDB_ROOT_USERNAME=admin
# MONGO_INITDB_ROOT_PASSWORD=changeme123

# ==========================================
# Security Settings
# ==========================================
# JWT Secret Key (change this in production!)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# CORS Settings
# ==========================================
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# ==========================================
# Docker Settings
# ==========================================
COMPOSE_PROJECT_NAME=banking-app

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO

# ==========================================
# Testing (for Week 2 tests)
# ==========================================
TEST_DATABASE=bankingdb_test

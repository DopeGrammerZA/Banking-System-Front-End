version: '3.8'

services:
  backend:
    build: ./backend
    container_name: banking-backend
    ports:
      - "80:80"    # Changed from 8000:8000
    volumes:
      - ./backend:/app
    environment:
      - PYTHONUNBUFFERED=1

  frontend:
    build: ./frontend
    container_name: banking-frontend
    ports:
      - "8080:8080"
    volumes:
      - ./frontend:/app
    depends_on:
      - backend
